{
    "env": {
        "node": true,
        "es6": true
    },
    "parserOptions": {
        "project": "./tsconfig.json"
    },
    "extends": [
        "airbnb-base",
        "airbnb-typescript/base"
    ],
    "rules": {
        "@typescript-eslint/indent": "off",
        "no-plusplus": [
            "error",
            {
                "allowForLoopAfterthoughts": true
            }
        ],
        "no-console": "off",
        "linebreak-style": "off"
    }
}
